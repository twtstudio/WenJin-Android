<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_topic_item_pic"
            android:src="@drawable/ic_topic_pic"
            android:scaleType="centerCrop"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/tv_topic_item_title"
            android:textSize="16sp"
            android:textColor="@color/color_text_primary_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/iv_topic_item_pic" />

        <TextView
            android:id="@+id/tv_topic_item_description"
            android:textSize="14sp"
            android:textColor="@color/color_text_secondary"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_topic_item_title"
            android:layout_alignStart="@+id/tv_topic_item_title"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_topic_item_title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>